<div class="col-sm-6 col-md-offset-3">

	<%= link_to raw("<span class='fa fa-arrow-left'></span> Go Back"), root_path, class: "btn btn-info" %>
	<br><br>
	
<%= form_for @post do |post| %>
	
	<div class="form-group row">
		<label class="col-sm-3">Title</label>
		<div class="col-sm-9">
			<%= post.text_field :title, class: "form-control" %>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-3">Description</label>
		<div class="col-sm-9">
			<%= post.text_area :description, class: "form-control", rows: "4" %>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-3">Seo Name</label>
		<div class="col-sm-9">
			<%= post.text_field :seo_name, class: "form-control" %>
		</div>
	</div>

	<div class="form-group row">
		<label class="col-sm-3">Post Body</label>
		<div class="col-sm-9">
			<%= post.text_area :post_body, class: "form-control", rows: "4" %>
		</div>
	</div>

	<%= post.submit :submit, class: "btn btn-info" %>
<% end %>

</div>